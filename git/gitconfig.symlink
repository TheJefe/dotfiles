[user]
	name = Jeff Koenig
	useConfigOnly = true
[core]
	editor = vim
	autocrlf = input
	excludesfile = /Users/jkoenig/.gitignore_global
[push]
	default = simple
[credential]
	helper = osxkeychain
[color]
	ui = true
[alias]
  g  = grep --break --heading --line-number
 lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit
[web]
	browser = open
[github]
	user = thejefe
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
